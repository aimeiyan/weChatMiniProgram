<!--index.wxml-->
<button 
    type="default" 
    size="{{defaultSize}}" 
    loading="{{loading}}" 
    plain="{{plain}}" 
    disabled="{{disabled}}" 
    bindtap="default"
    hover-class="other-button-hover">
     default 
</button>
<button 
    type="primary" 
    size="{{primarySize}}" 
    loading="{{loading}}" 
    plain="{{plain}}" 
    disabled="{{disabled}}" 
    bindtap="primary">
    primary 
</button>
<button type="warn" size="{{warnSize}}" loading="{{loading}}" plain="{{plain}}" disabled="{{disabled}}" bindtap="warn"> warn </button>
<button bindtap="setDisabled">点击设置以上按钮disabled属性</button>
<button bindtap="setPlain">点击设置以上按钮plain属性</button>
<button bindtap="setLoading">点击设置以上按钮loading属性</button>
<button open-type="contact"  bindcontact="getContactInfo">进入客服会话</button>
<button open-type="share">触发转发</button>
<button open-type="getUserInfo" bindgetuserinfo="getInfo">获取用户信息</button>
<button open-type="getPhoneNumber" bindgetphonenumber="getPhoneNumber">获取当前用户手机号码</button>
