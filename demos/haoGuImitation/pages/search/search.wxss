/* pages/search/search.wxss */
@import "../common/SearchBar/SearchBar.wxss";
.search_view{
  width: 100%;
  height: 130rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.list_item{
  display: flex;
  flex-direction: row;
  position: relative;
  width: 100%;
  height: 100rpx;
  align-items: center;
}

.list_item .item_type{
  width: 50rpx;
  position: relative;
  border-width: 1px;
  border-style: solid;
  border-radius: 6px;
  margin-left: 20rpx;
  padding: 6rpx;
  text-align: center;
}

.list_item .item_name{
  width: 160rpx;
  margin-left: 20rpx;
}

.list_item .item_code{
  width: 16prpx;
  margin-left: 30rpx;
}

.list_item image{
  position: absolute;
  width: 44rpx;
  height: 100%;
  right: 50rpx;
}