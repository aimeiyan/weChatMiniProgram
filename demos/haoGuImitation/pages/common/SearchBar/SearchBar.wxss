.search_bar{
  position: relative;
  display: flex;
  flex-direction: row;
  width: 690rpx;
  height: 70rpx;
  border: 1px solid rgb(228, 228, 228);
  border-radius: 12rpx;
  box-sizing: border-box;
  padding:0 20rpx;
  align-items: center;
}

.search_bar input{
  position: absolute;
  height: 100%;
  left: 60rpx;
  right: 70rpx;
}