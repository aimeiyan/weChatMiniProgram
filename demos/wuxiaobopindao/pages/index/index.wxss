.swiper swiper {
  height: 268rpx;
}

.swiper swiper-item image {
  width: 100%;
  height: 100%;
}

.special-column {
  padding: 30rpx;
  background-color: #fff;
}

.special-column .wrp {
  display: flex;
  justify-content: space-between;
  height: 150rpx;
  border-top: 1px solid #ededed;
  padding: 30rpx 0 0;
  margin-top: 30rpx;
}

.special-column .wrp .left {
  width: 30%;
}

.special-column .wrp .left image {
  width: 100%;
  height: 100%;
}

.special-column .wrp .right {
  width: 70%;
  padding-left: 30rpx;
}

.column {
  padding-bottom: 0;
}

.column .wrp {
  border-bottom: 1px solid #eee;
  padding-bottom: 30rpx;
  box-shadow: 0 1px 0 #efefef;
}



