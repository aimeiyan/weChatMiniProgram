.userInfo {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background-size: cover;
  height: 400rpx;
}

.userInfo-nickName {
  color: #fff;
  font-size: 28rpx;
}

.userInfo-avatar {
  width: 128rpx;
  height: 128rpx;
  background-size: cover;
  margin: 20rpx;
  border-radius: 50%;
}

.link {
  position: relative;
  padding: 26rpx 30rpx;
  margin-bottom: 1px;
  background-color: #fff;
}

.arrow {
  width: 32rpx;
  height: 32rpx;
  position: absolute;
  right: 30rpx;
  top: 30rpx;
}

page {
  box-sizing: border-box;
  background-color: #f9f9f9;
}
