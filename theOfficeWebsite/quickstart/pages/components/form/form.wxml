<view class="form">
<form bindsubmit="formSubmit" bindreset="formReset">
    <view class="section section-gap">
        <view class="section-title">switch</view>
        <switch type="switch" name="switch"/>
    </view>

    <view class="section section-gap">
        <view class="section-title">slider</view>
        <slider name="slider" show-value/>
    </view>
    
    <view class="section">
        <view class="section-title">input</view>
        <input name="input" placeholder="please input here"/>
    </view>

    <view class="section section-gap">
        <view class="section-title">radio</view>
        <radio-group name="radio-group">
        <label><radio value="radio1"/>radio1</label>
        <label><radio value="radio2"/>radio2</label>
        </radio-group>
    </view>
<view class="section section-gap">
    <view>checkbox</view>
    <checkbox-group name="checkbox">
    <label><checkbox value="checkbox1"/>checkbox1</label>
    <label><checkbox value="checkbox2"/>checkbox2</label>
    </checkbox-group>
</view>

<view class="btn-area">
    <button form-type="submit">Submit</button>
    <button form-type="reset">Reset</button>
</view>
</form>
</view>